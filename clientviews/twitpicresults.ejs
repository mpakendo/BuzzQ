<!-- Render the Twitpic results. Template: twitpicresults.ejs -->
<div id="twitpicCarousel" class="carousel slide">
   <div class="carousel-inner">
     <%
       var counter = 0;
       results.forEach(function(result) {
       if (result.source == "twitpic") {
          if (!counter) {%>
     <div class="item active">
      <% }
         else { %>
      <div class="item">
          <%}%>
         <img src="<%=result.imageUrl%>" alt="" <!--style="width:500px; height:500px"--> > <!-- TODO  central CSS style-->
         <div class="container">
           <div class="carousel-caption">
             <h1><%=result.timestamp%></h1>
           <p class="small"><%=result.text%></p>
         </div>
       </div>
     </div>
   <%
      counter++;
      } //close if (result.source)
    }); //close results.forEach
   %>
   </div>
   <a class="left carousel-control" href="#twitpicCarousel" data-slide="prev">&lsaquo;</a>
   <a class="right carousel-control" href="#twitpicCarousel" data-slide="next">&rsaquo;</a>
 </div><!-- /.carousel -->
